<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/returnprod.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <title>Retour Produit</title>
</head>

<body>
  <%- include('header'); %>

    <div class="titre">
      <h1>Retours Produits</h1>
    </div>

    <div class="main">
      <div class="form-container" id="form1">
        <form id="returnForm1" action="/returnprod" method="POST" enctype="multipart/form-data">
          <div class="input-row">
            <input type="text" name="name" placeholder="Nom du matériel" required />
            <input type="text" name="locataire" placeholder="Locataire" required />
            <input type="date" name="date" required />
            <input type="number" name="cout" placeholder="Coûts complémentaires" required />
          </div>
          <div class="etat-produit">
            <label>Validé :</label>
            <div class="icon-group">
              <i class="fa-solid fa-check" id="valide1"></i>
              <i class="fa-solid fa-circle-minus" id="refuse1"></i>
            </div>
          </div>
          <input type="hidden" name="etat" id="etat1" required />
        </form>
      </div>
    </div>

    <div class="main">
      <div class="form-container" id="form2">
        <form id="returnForm2" action="/returnprod" method="POST" enctype="multipart/form-data">
          <div class="input-row">
            <input type="text" name="name" placeholder="Nom du matériel" required />
            <input type="text" name="locataire" placeholder="Locataire" required />
            <input type="date" name="date" required />
            <input type="number" name="cout" placeholder="Coûts complémentaires" required />
          </div>
          <div class="etat-produit">
            <label>Validé :</label>
            <div class="icon-group">
              <i class="fa-solid fa-check" id="valide2"></i>
              <i class="fa-solid fa-circle-minus" id="refuse2"></i>
            </div>
          </div>
          <input type="hidden" name="etat" id="etat2" required />
        </form>
      </div>
    </div>

    <div id="popup" class="popup">
      <div class="popup-content">
        <p id="popup-message"></p>
        <button id="close-popup">Fermer</button>
      </div>
    </div>

    <%- include('footer'); %>

      <script>
        const popup = document.getElementById('popup')
        const popupMessage = document.getElementById('popup-message')
        const closePopup = document.getElementById('close-popup')

        function showPopup(message, color) {
          popupMessage.textContent = message
          popupMessage.style.color = color
          popup.classList.add('active')
        }

        closePopup.addEventListener('click', () => {
          popup.classList.remove('active')
        })

        function setupForm(id) {
          const formContainer = document.getElementById('form' + id)
          const etatInput = document.getElementById('etat' + id)
          const valide = document.getElementById('valide' + id)
          const refuse = document.getElementById('refuse' + id)

          valide.addEventListener('click', () => {
            etatInput.value = 'oui'
            showPopup('Retour accepté', '#FD5035')
            formContainer.remove()
          })

          refuse.addEventListener('click', () => {
            etatInput.value = 'non'
            showPopup('Retour refusé', '#FD5035')
            formContainer.remove()
          })
        }

        setupForm(1)
        setupForm(2)
      </script>
</body>

</html>