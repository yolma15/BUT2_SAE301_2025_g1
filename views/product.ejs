<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/product.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&family=Medula+One&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <title><%= produit.marque %> <%= produit.modele %></title>
</head>

<body>

  <%- include('header'); %>

  <% 
    let imagePath = "https://placehold.co/600x600?text=No+Image"; 
    if (produit.img) {
        if (produit.img.startsWith('img/') || produit.img.startsWith('http')) {
            imagePath = "/" + produit.img;
        } else {
            imagePath = "/uploads/" + produit.img;
        }
    }
  %>

  <main>
    <div class="gauche">
      <div class="G_img">
        <span><i class="fa-solid fa-chevron-left"></i></span>
        <img src="<%= imagePath %>" alt="<%= produit.modele %>" id="mainDisplayImg" />
        <span><i class="fa-solid fa-chevron-right"></i></span>
      </div>

      <div class="P_img">
        <img src="<%= imagePath %>" class="thumb-img active" alt="Vue 1" />
        <img src="<%= imagePath %>" class="thumb-img" alt="Vue 2" />
        <img src="<%= imagePath %>" class="thumb-img" alt="Vue 3" />
      </div>
    </div>

    <div class="droite">
      <h1><%= produit.marque %> <%= produit.modele %></h1>
      
      <p style="color: #888; margin-bottom: 10px; font-weight: 500; text-transform: uppercase;"><%= produit.type %></p>
      
      <h2 class="prix"><%= produit.prix_location %> € <span style="font-size: 0.6em; color: #666;">/ jour</span></h2>
      
      <p id="totalPrice" style="font-weight:600; margin-top:5px;">
      Prix total : 0 € 
      </p>

      <p class="description">
        <%= produit.description || "Aucune description disponible pour ce produit." %>
      </p>

      <hr style="border: 0; border-top: 1px solid #eee; margin: 20px 0;">

      <% 
          // 1. Est-ce que le serveur a dit qu'il y a une date de retour ? (Si oui, c'est loué)
          const estEnLocation = (typeof dateDispo !== 'undefined' && dateDispo !== null);

          // 2. Nettoyage de l'état (ex: "Bon", "bon ", "Disponible")
          const etatActuel = (produit.etat || '').toLowerCase().trim();

          // 3. Est-ce qu'on peut louer ? 
          // OUI SI : Pas en location ET (état est 'disponible' OU 'bon')
          const estDisponible = !estEnLocation && (etatActuel === 'disponible' || etatActuel === 'bon');
      %>

      <% if (estDisponible) { %>
          
          <form action="/locations/create" method="POST" class="rental-form">
              <input type="hidden" name="produit_id" value="<%= produit.id %>">
              
              <div class="date-inputs">
                  <div style="flex: 1;">
                      <label for="start">Début</label>
                      <input type="date" name="date_debut" id="start" required>
                  </div>
                  <div style="flex: 1;">
                      <label for="end">Fin</label>
                      <input type="date" name="date_retour_prevue" id="end" required>
                  </div>
              </div>

              <% if (isLoggedIn) { %>
                  <button type="submit">
                      Louer ce produit
                  </button>
              <% } else { %>
                  <a href="/login" class="btn-login-link" style="display:block; text-align:center; background:#333; color:white; padding:15px; border-radius:50px; text-decoration:none; font-weight:bold;">
                      Connectez-vous pour louer
                  </a>
              <% } %>
          </form>

      <% } else { %>

          <div class="unavailable-box" style="background-color: #fff0ed; border: 1px solid #ffccc7; color: #d63031; padding: 25px; border-radius: 20px; text-align: center; margin-top: 20px;">
              
              <i class="fa-solid fa-calendar-xmark" style="font-size: 2.5rem; margin-bottom: 15px; display:block;"></i>
              
              <h3 style="margin: 0 0 10px 0; font-size: 1.3rem; font-weight: 600;">Produit momentanément indisponible</h3>
              
              <% if (estEnLocation) { %>
                  <p style="margin: 0; color: #555; font-size: 1.1rem;">
                      Disponible à partir du : <br>
                      <strong style="color: #FD5035; font-size: 1.4rem; display:block; margin-top:5px;"><%= dateDispo %></strong>
                  </p>
              <% } else { %>
                  <p style="margin: 0; color: #555;">Raison : <strong><%= produit.etat %></strong></p>
              <% } %>

              <a href="/catalogue" style="display: inline-block; margin-top: 20px; text-decoration: none; color: #555; font-size: 0.9rem; border-bottom: 1px solid #555;">
                  ← Voir d'autres produits
              </a>
          </div>

      <% } %>
      </div>
  </main>

  <%- include('footer'); %>

</body>

<script>
  // --- 3. calcule prix ---
  const prixParJour = <%= produit.prix_location %>; // nombre JS

  // --- 1. GESTION DU CARROUSEL ---
  const mainImage = document.getElementById('mainDisplayImg');
  const thumbnails = document.querySelectorAll('.P_img img');
  const leftArrow = document.querySelector('.fa-chevron-left');
  const rightArrow = document.querySelector('.fa-chevron-right');

  const dbImage = "<%= imagePath %>";
  const images = [dbImage, dbImage, dbImage]; 
  let currentIndex = 0;

  function updateMainImage(index) {
    currentIndex = index;
    mainImage.src = images[currentIndex];
    
    thumbnails.forEach((thumb, i) => {
      if (i === currentIndex) {
          thumb.classList.add('active');
          thumb.style.opacity = '1';
      } else {
        thumb.classList.remove('active');
        thumb.style.opacity = '0.7';
      }
    });
  }

  if(leftArrow) {
      leftArrow.addEventListener('click', () => {
        const nextIndex = (currentIndex - 1 + images.length) % images.length;
        updateMainImage(nextIndex);
      });
  }

  if(rightArrow) {
      rightArrow.addEventListener('click', () => {
        const nextIndex = (currentIndex + 1) % images.length;
        updateMainImage(nextIndex);
      });
  }

  thumbnails.forEach((thumb, i) => {
    thumb.addEventListener('click', () => updateMainImage(i));
  });

  updateMainImage(0);


  // --- 2. GESTION DATES ---
  const startInput = document.getElementById('start');
  const endInput = document.getElementById('end');
  const totalPriceEl = document.getElementById('totalPrice');

  function calculerNbJours(debut, fin) {
    const d1 = new Date(debut);
    const d2 = new Date(fin);
    const diffTime = d2.getTime() - d1.getTime(); // ms
    const diffJours = diffTime / (1000 * 60 * 60 * 24);
    return diffJours > 0 ? diffJours : 0;
  }

  function majPrixTotal() {
  if (!startInput || !endInput || !totalPriceEl) return;

  const dateDebut = startInput.value;
  const dateFin = endInput.value;

  if (dateDebut && dateFin) {
    const nbJours = calculerNbJours(dateDebut, dateFin);
    if (nbJours > 0) {
      const joursPayants = Math.max(0, nbJours - 3);

      let total = joursPayants * prixParJour;
      let texteRemise = '';

      // Réduction de 10 % au-dessus de 7 jours
      if (nbJours > 7) {
        total = total * 0.9; // -10 %
        texteRemise = ' avec 10% de réduction';
      }

      totalPriceEl.textContent =
        `Prix total : ${total.toFixed(2)} € (${nbJours} jour(s) dont 3 gratuit(s)${texteRemise})`;
    } else {
      totalPriceEl.textContent = 'Prix total : 0 €';
    }
  } else {
    totalPriceEl.textContent = 'Prix total : 0 €';
  }
}



  if (startInput && endInput) {
      const today = new Date().toISOString().split('T')[0];
      
      startInput.setAttribute('min', today);
      endInput.setAttribute('min', today);

      startInput.addEventListener('change', function() {
          const startDate = this.value;
          endInput.setAttribute('min', startDate);
          if(endInput.value && endInput.value < startDate) {
              endInput.value = ""; 
          }
          majPrixTotal();
      });

      endInput.addEventListener('change', function() {
          majPrixTotal();
      });
  }
</script>

</html>