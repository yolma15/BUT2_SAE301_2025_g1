<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ajout Produit</title>
  <link rel="stylesheet" href="/css/agent.css">
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('header'); %>

  <main>
    <div class="form-wrapper">
      <h1>Ajouter un produit</h1>

      <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert-message">
          <%= message %>
        </div>
      <% } %>

      <form action="/agent" method="POST" class="add-product-form">
        
        <div class="form-group">
          <label for="type">Type de produit</label>
          <select name="type" id="type" required>
            <option value="" disabled selected>Choisir un type...</option>
            <option value="Vélo">Vélo</option>
            <option value="Tapis de course">Tapis de course</option>
            <option value="Rameur">Rameur</option>
            <option value="Elliptique">Elliptique</option>
            <option value="Musculation">Musculation</option>
            <option value="Autre">Autre</option>
          </select>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="marque">Marque</label>
            <input type="text" name="marque" id="marque" placeholder="Ex: Technogym" required>
          </div>

          <div class="form-group">
            <label for="modele">Modèle</label>
            <input type="text" name="modele" id="modele" placeholder="Ex: MyRun 500" required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="prix_location">Prix location (€/jour)</label>
            <input type="number" name="prix_location" id="prix_location" step="0.01" min="0" placeholder="0.00" required>
          </div>

          <div class="form-group">
            <label for="etat">État initial</label>
            <select name="etat" id="etat" required>
              <option value="disponible">Disponible</option>
              <option value="maintenance">Maintenance</option>
              <option value="hors_service">Hors service</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="4" placeholder="Description technique du produit..."></textarea>
        </div>

        <button type="submit" class="btn-submit">Ajouter le produit</button>
      </form>
    </div>
  </main>

  <%- include('footer'); %>
</body>
</html>