<!DOCTYPE html>
<html lang="fr">
<head> 
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mes locations</title>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/mes_locations.css" />
</head>

<%- include('header') %>

<main class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Mes Locations</h1>

  <% if (typeof message !== 'undefined' && message) { %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4" role="alert">
      <p><%= message %></p>
    </div>
  <% } %>

  <% if (locations.length === 0) { %>
    <div class="bg-gray-100 rounded-lg p-8 text-center">
      <p class="text-gray-600 mb-4">Vous n'avez pas encore de location.</p>
      <a href="/catalogue" class="inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
        D√©couvrir le catalogue
      </a>
    </div>
  <% } else { %>
    <div class="grid gap-4">
      <% locations.forEach(location => { %>
        <% 
          const now = new Date();
          const dateDebut = new Date(location.date_debut);
          const dateRetourPrevue = new Date(location.date_retour_prevue);
          
          // On peut annuler si la location n'est pas commenc√©e ET n'est pas termin√©e
          const peutAnnuler = !location.date_retour_effective && dateDebut > now;
        %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
          <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
              <h3 class="text-xl font-semibold mb-2">
                <%= location.marque %> <%= location.modele %>
              </h3>
              <p class="text-gray-600 mb-1">
                <span class="font-medium">Type:</span> <%= location.type %>
              </p>
            </div>
            <div class="text-right">
              <p class="text-2xl font-bold text-blue-600">
                <%= location.prix_total.toFixed(2) %> ‚Ç¨
              </p>
              <p class="text-sm text-gray-500">Prix total</p>
            </div>
          </div>

          <div class="border-t pt-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <p class="text-sm text-gray-600 mb-1">Date de d√©but</p>
                <p class="font-medium">
                  <%= new Date(location.date_debut).toLocaleDateString('fr-FR') %>
                </p>
              </div>
              <div>
                <p class="text-sm text-gray-600 mb-1">Date de retour pr√©vue</p>
                <p class="font-medium">
                  <%= new Date(location.date_retour_prevue).toLocaleDateString('fr-FR') %>
                </p>
              </div>
              <div>
                <p class="text-sm text-gray-600 mb-1">Statut</p>
                <% if (location.date_retour_effective) { %>
                  <span class="inline-block bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full">
                    ‚úì Rendu le <%= new Date(location.date_retour_effective).toLocaleDateString('fr-FR') %>
                  </span>
                <% } else { %>
                  <% 
                    const isLate = now > dateRetourPrevue;
                  %>
                  <span class="inline-block <%= isLate ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %> text-sm px-3 py-1 rounded-full">
                    <%= isLate ? '‚ö†Ô∏è En retard' : 'üìã En cours' %>
                  </span>
                <% } %>
              </div>
            </div>

            <% if (!location.date_retour_effective) { %>
              <div class="mt-4 flex justify-end gap-3">
                <% if (peutAnnuler) { %>
                  <button 
                    onclick="annulerReservation(<%= location.id %>)"
                    class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">
                    ‚ùå Annuler la r√©servation
                  </button>
                <% } %>
                <a href="/returnprod" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">
                  Signaler le retour
                </a>
              </div>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</main>

<script>
async function annulerReservation(locationId) {
  if (!confirm("‚ö†Ô∏è √ätes-vous s√ªr de vouloir annuler cette r√©servation ?\n\nCette action est irr√©versible.")) {
    return;
  }

  try {
    const response = await fetch(`/locations/cancel/${locationId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    });

    const data = await response.json();

    if (data.success) {
      alert("‚úÖ " + data.message);
      window.location.reload();
    } else {
      alert("‚ùå " + data.error);
    }
  } catch (error) {
    console.error("Erreur:", error);
    alert("‚ùå Une erreur est survenue lors de l'annulation");
  }
}
</script>

<%- include('footer') %>
